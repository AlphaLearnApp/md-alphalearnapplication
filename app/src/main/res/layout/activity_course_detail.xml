<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.course.CourseDetailActivity">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:scaleType="centerCrop"
        android:src="@drawable/audia5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/circle_button_background"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"/>

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        android:background="@drawable/rectangle_1"
        android:layout_marginBottom="30dp"/>

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_play_arrow_24"
        android:background="@drawable/circle_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/rectangle_1"
        app:layout_constraintBottom_toTopOf="@id/rectangle_1"/>

    <TextView
        android:id="@+id/tv_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Astronomics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rectangle_1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorSecondary"
        style="@style/textBig"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@id/tv_course"
        app:layout_constraintTop_toTopOf="@id/tv_course"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/tv_item_rating"/>

    <TextView
        android:id="@+id/tv_item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        style="@style/textBig"
        app:layout_constraintTop_toTopOf="@id/tv_course"
        app:layout_constraintBottom_toBottomOf="@id/tv_course"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nature of Light Waves"
        android:layout_marginTop="10dp"
        style="@style/heading1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_course"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_collections_bookmark_24"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 Topics"
        style="@style/textSmall"
        app:layout_constraintTop_toTopOf="@id/iv_book"
        app:layout_constraintBottom_toBottomOf="@id/iv_book"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_book"
        app:layout_constraintBottom_toBottomOf="@id/iv_book"
        app:layout_constraintStart_toEndOf="@id/tv_topics"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_access_time_24"
        app:layout_constraintTop_toTopOf="@id/iv_book"
        app:layout_constraintBottom_toBottomOf="@id/iv_book"
        app:layout_constraintStart_toEndOf="@id/tv_spacer"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42 Hours"
        style="@style/textSmall"
        app:layout_constraintTop_toTopOf="@id/iv_book"
        app:layout_constraintBottom_toBottomOf="@id/iv_book"
        app:layout_constraintStart_toEndOf="@id/iv_timer"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/line_5"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/line_5"
        app:layout_constraintTop_toBottomOf="@id/iv_book"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorDarkerGrey"
        style="@style/textBig"/>

    <TextView
        android:id="@+id/tv_text_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/example"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:justificationMode="inter_word"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        style="@style/textMedium"
        android:textColor="@color/colorGrey"/>

    <TextView
        android:id="@+id/tv_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_desc"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        style="@style/textBig"
        android:textColor="@color/colorDarkerGrey"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/audia5"
        app:layout_constraintTop_toBottomOf="@id/tv_instructor"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="William S. Cunningham"
        android:layout_marginTop="6dp"
        style="@style/textMedium"
        android:textColor="@color/colorDarkerGrey"
        app:layout_constraintTop_toTopOf="@id/civ_photo"
        app:layout_constraintStart_toEndOf="@id/civ_photo"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/astronomics"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/civ_photo"
        android:layout_marginStart="12dp"
        style="@style/textSmall"
        android:textColor="@color/colorGrey"/>

    <View
        android:id="@+id/line_4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/line_4"
        app:layout_constraintTop_toBottomOf="@id/civ_photo"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_join_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/join_course"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/line_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        style="@style/heading2"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_primary"/>

</androidx.constraintlayout.widget.ConstraintLayout>