<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quizrecommendation.QuizRecomActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="6dp">

            <LinearLayout
                android:id="@+id/btn_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_rounded_mustard"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_arrow_right"
                    app:tint="@color/colorWhite" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_arrow_right"
                    app:tint="@color/colorWhite" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question no. 1"
                android:textColor="@color/colorWhite"
                style="@style/textBig" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_rounded_white"
                android:scrollbars="vertical"
                android:fadeScrollbars="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_text_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterkaitan semua subsistem iklim yang berbeda tetapi saling berinteraksi dan terintegrasi disebut sebagai"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/mulish_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="35dp">

                        <LinearLayout
                            android:id="@+id/rb_option_a"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rb_right_answer"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sistem Iklim"
                                style="@style/textBig" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rb_option_b"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rb_wrong_answer"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cuaca"
                                style="@style/textBig" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rb_option_c"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rb_unchecked"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sistem Cuaca"
                                style="@style/textBig" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rb_option_d"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rb_unchecked"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Siklus perubahan iklim"
                                style="@style/textBig" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/you_must_learn_the_material_below"
                        style="@style/textBig"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:id="@+id/tv_link_subtopic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iklim dan Perubahan Iklim"
                        style="@style/textBig"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/mulish_medium"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:text="@string/finish"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                style="@style/textBig"
                android:background="@drawable/bg_rounded_maroon" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:text="@string/previous"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                style="@style/textBig"
                android:background="@drawable/bg_rounded_mustard"
                android:layout_marginEnd="18dp"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                style="@style/textBig"
                android:background="@drawable/bg_rounded_mustard" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>